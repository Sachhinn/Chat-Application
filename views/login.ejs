<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Login - Konnekt</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@1,500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        @import url();

        body {
            background: #f5f6fa;
            font-family: 'Inter', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background: #fff;
            padding: 2rem 2.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
            width: 350px;
        }

        .login-container h1 {
            text-align: center;
            margin-bottom: 1rem;
            color: #7F00FF;
            font-family: 'Poppins', sans-serif;
        }

        .login-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #333;
        }

        .form-group {
            margin-bottom: 1.2rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.4rem;
            color: #555;
        }

        .form-group input {
            width: 100%;
            padding: 0.6rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
        }

        .btn {
            width: 100%;
            padding: 0.7rem;
            background: #7F00FF;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
            margin-bottom: 0.8rem;
            transition: background 0.2s;
        }

        .btn:hover {
            background: #9C27B0;
        }

        .options {
            text-align: center;
            margin-top: 1rem;
        }

        .options a {
            color: #4078c0;
            text-decoration: none;
            margin: 0 0.5rem;
            font-size: 0.98rem;
        }

        .options a:hover {
            text-decoration: underline;
        }

        .error {
            color: #d8000c;
            background: #ffd2d2;
            padding: 0.5rem;
            border-radius: 4px;
            margin-bottom: 1rem;
            display: none;
            font-size: 0.95rem;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <h1>Konnekt</h1>
        <h2>Login</h2>
        <div id="errorMsg" class="error"></div>
        <!-- Check why doesn't the login form works -->
        <form id="loginForm" autocomplete="off">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required autofocus>
            </div>
            <div class="form-group">
                <label for="passwordView">Password</label>
                <div style="position:relative;">
                    <input type="password" id="passwordView" name="password" required autocomplete="new-password">
                    <span id="togglePasswordView"
                        style="position:absolute; right:0; top:50%; transform:translateY(-50%); cursor:pointer; color:#7F00FF;">
                        üëÅÔ∏è
                    </span>
                </div>
            </div>
            <button type="submit" class="btn">Login</button>
        </form>
        <div class="options">
            <a href="/register">Register</a> |
            <a id="DemoUser" href="#">Demo User</a>
        </div>
    </div>
    <script>
        // Password view toggle
        const passwordViewInput = document.getElementById('passwordView');
        const togglePasswordView = document.getElementById('togglePasswordView');
        togglePasswordView.addEventListener('click', function () {
            const type = passwordViewInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordViewInput.setAttribute('type', type);
            this.textContent = type === 'password' ? 'üëÅÔ∏è' : 'üôà';
        });

        document.getElementById('loginForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('passwordView').value.trim();
            const errorMsg = document.getElementById('errorMsg');
            errorMsg.style.display = 'none';

            if (!username || !password) {
                errorMsg.textContent = 'Please enter both username and password.';
                errorMsg.style.display = 'block';
                return;
            }
            login(username, password);
        });
    
        // Login For DEMO User:
        document.getElementById('DemoUser').addEventListener('click', ()=>{
            login('demo_user','demo_password')
        })

        function login(username, password) {
            fetch('/login', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ username, password })
            }).then(res => res.json())
                .then(data => {
                    if (data.success) {
                        console.log(data.message);
                        window.location.href = `/user`; // Redirect to user profile
                    } else {
                        console.log(data);
                        errorMsg.textContent = data.message || 'Invalid credentials.';
                        errorMsg.style.display = 'block';
                    }
                })
                .catch(() => {
                    errorMsg.textContent = 'Server error. Please try again.';
                    errorMsg.style.display = 'block';
                });
        }
    </script>
</body>

</html>